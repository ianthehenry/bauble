#!/usr/bin/env bash

set -euo pipefail

prod_build=false
build_js=true
build_wasm=true

while [[ $# -gt 0 ]]; do
  case "$1" in
    --prod) prod_build=true ;;
    --js) build_wasm=false ;;
    --wasm) build_js=false ;;
    *)
      echo "unknown flag $1" >&2
      exit 1 ;;
  esac
  shift
done
rollup_args="--no-treeshake --no-indent"
emcc_args="-O0"
if [[ "$prod_build" == "true" ]]; then
  rollup_args="-p rollup-plugin-terser"
  emcc_args="-O3 --closure 1"
fi

if [[ "$prod_build" == "true" ]]; then
  rm -rf public/
  mkdir -p public/js
fi

if [[ "$build_wasm" == "true" ]]; then
  rm -rf out/
  mkdir -p out

  preload_args=""
  for file in src/*.janet; do
    preload_args="$preload_args --preload-file $file@$(basename $file)"
  done
  for file in src/glslisp/src/*.janet; do
    preload_args="$preload_args --preload-file $file@glslisp/src/$(basename $file)"
  done

  emcc \
    $emcc_args \
    -o out/janet.js \
    -I janet \
    janet/janet.c \
    src/driver.cpp \
    -lembind \
    $preload_args \
    -s "EXPORTED_FUNCTIONS=['_main']" \
    -s "EXPORTED_RUNTIME_METHODS=['FS']" \
    -s ALLOW_MEMORY_GROWTH=1 \
    -s AGGRESSIVE_VARIABLE_ELIMINATION=1 \
    -s MODULARIZE \
    -s EXPORT_ES6

  ln -f out/janet.{data,wasm} public/js
fi

if [[ "$build_js" == "true" ]]; then
  rm -rf public/js/main.js

  (
    cd ui/
    ./node_modules/.bin/rollup -c $rollup_args
  )
fi

fingerprint() {
  if [[ "$prod_build" == "true" ]]; then
    checksum=$(sha256sum "$1" | cut -f1 -d' ')
    printf "%s.%s" "${checksum:0:16}" "${file#*.}"
  else
    printf '%s' "$(basename "$1")"
  fi
}

staticasset() {
  file=$1
  path=$2
  dest="${path}$(fingerprint "$1")"
  ln -f "$1" "public$dest"
  printf "%s" "$dest"
}

css=$(staticasset ui/styles/main.css /)

ln -f ui/assets/icons.svg public/icons.svg

mkdir -p public/{about,help}
ui/html/home "$css" > public/index.html
ui/html/about "$css" > public/about/index.html
ui/html/help "$css" > public/help/index.html
